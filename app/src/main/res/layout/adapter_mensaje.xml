<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/contacto_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@drawable/ic_profile_1"
            app:shadow="true" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Diego O. Miguel de los palotes garcÃ­a"
                android:singleLine="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txt_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="13dp"
                android:text="Hola como estas? todo bien que contas de lindo.. que hiciste ayer?" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txt_fecha_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="jul 14"
                android:gravity="right"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>